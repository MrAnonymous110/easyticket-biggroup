			<result name="success" type="redirectAction">cart</result>
			<result name="login" type="redirectAction">login</result>
		</action>

		<action name="pay" class="com.controller.HomeController"
			method="pay">
			<result name="success" type="redirectAction">cart</result>
			<result name="login" type="redirectAction">login</result>
		</action>

